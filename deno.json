{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "name": "@shreyas/astro-use-server",
  "version": "0.1.1",
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.ns",
      "dom"
    ]
  },
  "tasks": {
    "build": "deno -A ./scripts/build-npm.ts",
    "publish": "deno task build && cd npm && npm publish"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3"
  },
  "exports": {
    ".": "./src/main.ts",
    "./plugin": "./src/plugin/main.ts",
    "./plugin/server-runtime": "./src/plugin/server-runtime.ts",
    "./plugin/server-middleware": "./src/plugin/server-middleware.ts",
    "./plugin/server-middleware-pre": "./src/plugin/server-middleware-pre.ts",
    "./plugin/client-runtime": "./src/plugin/client-runtime.ts"
  }
}
